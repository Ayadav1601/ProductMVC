@model List<Product>

<h2>Product List</h2>
<div>
    <a  asp-action="Create" asp-controller="Product" class=" btn btn-primary">Add Product</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ProductDescription</td>
                <td><a asp-action="Edit" asp-controller="Product" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
